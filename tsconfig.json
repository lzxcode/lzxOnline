{
  "compilerOptions": {
    "outDir": "lib",
    "target": "esnext",
    "module": "esnext",
    "sourceMap": false,
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./packages/*"],
      "@/*": ["src/*"]
    },
    "types": [
      "unplugin-vue-macros/macros-global",
      "node",
      "element-plus/global"
    ]
  },
  // 要编译的文件夹 文件
  "include": ["./packages/**/*", "src/**/*", "env.d.ts"]
}
